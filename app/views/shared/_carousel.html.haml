#carousel
  - if @articles.present?
    .items
      %ul
        - @articles.each do |article|
          %li
            = link_to main_app.article_path(article) do
              .bg-image(style="background-image: url(#{image_path article.image})")
              .title= article.title

        - number_of_filler_elements_for(@articles).times do
          %li
            .empty

    = render 'shared/carousel_navigation'
